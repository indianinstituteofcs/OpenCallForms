<div>
    <% if(!loggedIn) { %>
        <div class="jumbotron text-center" style="width:95%;margin:auto;margin-top:1rem">
            <h3 class="container" style="margin-top:2rem">Edit Account Info</h3>
            <p>No Talent is currently logged in.</p>
        </div>
    <% } else { %>
        <div  class="container text-center" style="margin-top:1rem">
            <h4>Edit Password</h4>
            <p>Current Password is needed to change it.<br/>
            To update password please enter a New Password, <br/>
            and then re-enter to confirm to confirm it.
            </p>    
        </div>

        <div class="col" style="margin-top:2rem">
            <form name="form-sign-up" method="POST" action="/talent/update-password" style="width:80%;margin-left:10%;">
                <!-- Current Password-->
                <div class="form-group form-row justify-content-center" style="margin-top:2rem;">
                    <div class="col input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" for="inputPassword">Current</span>
                        </div>
                        <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Password..." required>
                    </div>
                </div>

                <!-- New Password-->
                <div class="form-group form-row justify-content-center" style="margin-top:2rem;">
                    <div class="col input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" for="inputNewPassword">New</span>
                        </div>
                        <input type="password" class="form-control" id="inputNewPassword" name="newPassword" placeholder="AlphaNumeric. 15 => Length => 8" required>
                    </div>
                </div>

                <!-- Confirm New Password-->
                <div class="form-group form-row justify-content-center" style="margin-top:2rem;">
                    <div class="col input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" for="inputConfirmNewPassword">Confirm New</span>
                        </div>
                        <input type="password" class="form-control" id="inputConfirmNewPassword" name="confirmNewPassword" placeholder="Re-enter new password... " required>
                    </div>
                </div>
    
                <div class="text-center" style="margin-top:1.2rem">
                    <input type="submit" value="Update" class="btn btn-md btn-secondary btn-block">
                </div>
            </form>  
        </div>
    <% } %>
    </div>
</div>